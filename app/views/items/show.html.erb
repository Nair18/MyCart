<style>
 body {
    background-image: url("/assets/background.jpg");
    background-repeat: no-repeat;
    background-position: right top;
    margin-right: 200px;
    background-attachment: fixed;
}

#gallery {
   margin:0;
   padding:0;
   list-style:none;

 }

 #gallery li {

 	float:left;
 	width:30%;
 	margin:2.5%;
 	background-color: #f5f5f5;
 	color:#000;
 	font-size: 1.75em;
 

 }
</style>
<body>
 
<section id="gallery">
<% @product.each do |p|%>
<ul>
	<li><div><%= image_tag p.image%></div>
	<div><strong><%= p.name%></strong>
	<p>Price(INR): <%= p.price%><br>
	<%= link_to "Learn More", item_product_path(p.Item_id, p), :class => "btn btn-danger" %></p></div></li></ul>

<%end%></section>

 <script src="js/jquery.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>
</body>
</html>