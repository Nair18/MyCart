<style>
 #gallery {
   margin:0;
   padding:0;
   list-style:none;

 }

 body {
    background-image: url("/assets/background.jpg");
    background-repeat: no-repeat;
    background-position: right top;
    margin-right: 200px;
    background-attachment: fixed;
}

 #gallery li {

 	float:left;
 	width:25%;
 	margin:2.5%;
 	background-color: #f5f5f5;
 	color:#bdc3c7;
 	font-size: 1.75em;
 }
</style>

<body>
 <section id="gallery">
 	<% @items.each do |item|%>
 	<ul >
     <li><strong><%= link_to item.name,item_path(item)%></strong>
     	</li>
     </ul>
     <%end%>
   </section>


 <script src="js/jquery.js"></script>
